<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produse aproape expirate"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnAziMaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiră azi sau mâine"
            android:textSize="18sp"
            style="@style/TransparentButton"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSaptamana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiră săptămâna asta"
            android:textSize="18sp"
            style="@style/TransparentButton"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnLuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiră luna asta"
            android:textSize="18sp"
            style="@style/TransparentButton"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Înapoi la meniu"
            android:textSize="18sp"
            style="@style/TransparentButton" />
    </LinearLayout>
</ScrollView>
